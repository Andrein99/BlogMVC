@model EntradasConComentariosNegativosViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Entradas con comentarios negativos";
}

<h2>Entradas con comentarios negativos</h2>

@if (Model.Entradas.Any())
{
	<table>
		<thead>
			<tr>
				<th>Título</th>
				<th>Número de comentarios negativos</th>
				<th>Acción</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var entrada in Model.Entradas)
			{
				<tr>
					<td>@entrada.Titulo</td>
					<td>@entrada.CantidadComentariosNegativos</td>
					<td>
						<a asp-action="Detalle" asp-route-id="@entrada.Id" class="btn btn-primary">Ver Entrada</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
} else
{
	<p>No hay entradas con comentarios negativos.</p>
}
